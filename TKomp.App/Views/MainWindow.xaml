<Window x:Class="TKomp.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:viewmodels="clr-namespace:TKomp.App.ViewModels" 
        xmlns:components="clr-namespace:TKomp.App.Views"         
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <components:ConnectionView  DataContext="{Binding ConnectionViewModel}" Margin="5" />
        <components:ColumnsView  DataContext="{Binding ColumnsViewModel}" Margin="5" />
    </StackPanel>
</Window>